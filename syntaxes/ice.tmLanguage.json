{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Ice-Lang",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#expression"
		},
		{
			"include": "#declaration"
		}
	],
	"repository": {
		"comment": {
			"name": "comment.line.icec",
			"begin": "#",
			"end": "\n"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.icec",
					"match": "\\b(if|elif|else|while|do|foreach|as|break|continue|return|use|from)\\b"
				},
				{
					"name": "keyword.operator.icec",
					"match": "\\b(and|or|not|is|new|delay|match|enum)\\b"
				},
				{
					"name": "keyword.operator.icec",
					"match": "\\:|\\+|-|\\*|/|%|\\&|\\||\\^|~|<|>|!|=|!|<|>|\\?"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.icec",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.icec",
					"match": "\\\\."
				}
			]
		},
		"expression": {
			"patterns": [
				{
					"name": "constant.numeric.icec",
					"match": "\\b[0-9]+(\\.[0-9]*)?"
				},
				{
					"name": "entity.name.function.icec",
					"match": "\\b[a-zA-Z_][a-zA-Z_0-9]*\\b"
				}
			]
		},
		"declaration": {
			"begin": "@",
			"end": ":|{|,|;",
			"beginCaptures": {
				"0": {"name": "keyword.other.unit.icec"}
			},
			"patterns": [
				{
					"begin": "\\(",
					"end": "\\)",
					"beginCaptures": {
						"0": {"name": "entity.name.function.icec"}
					},
					"endCaptures": {
						"0": {"name": "entity.name.function.icec"}
					},
					"patterns": [
						{
							"include": "#declaration"
						}
					]
				}
			]
		}
	},
	"scopeName": "source.icec"
}
